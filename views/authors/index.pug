doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Mybrary
    body 
        include ../includes/header.pug
        h3 Search Authors
        form(action="/authors",method='GET') 
            input(type="text" name="nameSearch" value= nameSearch placeholder="search")
            button(type='submit') Search 
        each author in authors
            h3 #{author.authorName}
            a(href=`/authors/${author.id}/edit`) Edit
            a(href=`/authors/${author.id}`) View
            form(action=`/authors/${author.id}?_method=DELETE` method="post")
                button(type="submit") Delete